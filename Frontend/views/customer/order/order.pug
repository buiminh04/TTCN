doctype html
html
  head
    title Đơn hàng
    link(rel="stylesheet", href="/main.css")
    link(rel="stylesheet", href="/style.css")
    link(rel="stylesheet", href="/responsive.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")
  body
    include ../../header.pug

    #customer
      .customer-left
        ul
          li: a(href="/customer") Thông tin tài khoản
          li: a(href="/customer/address") Thông tin địa chỉ
          li: a(href="/customer/change-password") Đổi mật khẩu
          li.active: a(href="/customer/orders") Đơn hàng của bạn
        a.log-out(href="/auth/logout") Đăng xuất
      .customer-right
        h1 Đơn hàng của bạn
        ul
          li: a(href="/customer/orders/check") Chờ xác nhận
          li: a(href="/customer/orders/transport") Đang vận chuyển
          li: a(href="/customer/orders/receive") Đã nhận
          li: a(href="/customer/orders/cancel") Đã hủy

    include ../../footer.pug
